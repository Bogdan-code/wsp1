<h2>Uppdatera frukt</h2>


<form action="/fruits/<%=@fruit['id']%>/update" method="post">

	<label>Frukt <input type="text" name="fruit_name" value=<%=@fruit['name']%>></label>
	<label>Beskrivning <input type="text" name="fruit_description" value=<%=@fruit['description']%>></label>
	<label>Smak <input type="integer" name="fruit_taste" value=<%=@fruit['tastiness']%>></label>
	<input type="submit" value="Spara">
</form>

